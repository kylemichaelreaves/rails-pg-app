{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "ESNext",
    "jsx": "react",
    "noEmit": true,
    "allowJs": true,
    "outDir": "./dist/",
    "noImplicitAny": true,
    "paths": {
      "~/*": [
        "./app/javascript*"
      ]
    }
  },
  "include": [
    "app/javascript"
  ],
  "exclude": [
    "app/assets",
    "app/controllers",
    "app/helpers",
    "app/jobs",
    "app/mailers",
    "app/models",
    ".bundle",
    ".idea",
    "gems",
    "config",
    "**/*.spec.ts",
    "node_modules",
    "test",
    "tmp",
    "db",
    "bin",
    "vendor",
    "public",
    "react-query/types/devtools"
  ],
  "compileOnSave": false
}
